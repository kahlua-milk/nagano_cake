<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3 class="bg-secondary-subtle">ショッピングカート</h3>
    </div>
    <div class="col-md-1 offset-md-8">
      <h3 class="bg-secondary-subtle">ショッピングカート</h3>
    </div>
  </div>
</div>
      
      
      
      
      
      
      <table class="table table-bordered">
        <thead>
          <tr class="table-secondary">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <%= @cart_products.each do |cart| %>
          <tr>
            <td><%= cart.product.name %></td>
            <td><%= (cart.product.price * 1.1).floor %></td>
            <td><%= cart.quantity %></td>
            <td><%= %></td>
            <td>削除する</td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <table>
        <tbody>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment %></td>
          </tr>
          <tr>
            <td>お届け先</td>
            <td>
              <%= @order.postal_code %>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>


    <div class="col-md-3 offset-md-1">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>送料</td>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <td>商品合計</td>
            <td></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>


    <div class="col-md-2"></div>


    <%= form_with model: @order, url: orders_path do |f| %>
    <div>
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    </div>