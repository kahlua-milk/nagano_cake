<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3 class="bg-secondary-subtle">　ショッピングカート　</h3>
    </div>
    <div class="col-md-1 offset-md-8">
      <%= link_to "カートを空にする", destroy_all_path, method: :delete, "data-confirm" => "本当に空にしますか？" %>
    </div>
  </div>



  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr class="table-secondary">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= @cart_products.each do |cart_product| %>
        <tr>
          <td><%= cart_product.product.name %></td>
          <td><%= cart_product.product.with_tax_price.to_s(:delimited) %></td>
          <td>
            <%= cart_product.select :quantity, *[1..10], required:true,
                   options_for_select(cart, {selected: cart.quantity.to_i} ) %>
            <%= link_to "変更", cart_items_path(cart_product.id),
                      method: :patch, class: "btn btn-sm btn-success" %>
          </td>
          <td><%= cart_product.subtotal.to_s(:delimited) %></td>
          <td>
            <%= link_to "削除する", cart_items_path(cart_product.id),
                      method: :delete, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>




  <div class="row">
    <div class="col-md-3">
      <div>
        <%= link_to "買い物を続ける", items_path, class: "btn btn-primaryr" %>
      </div>
    </div>
    <div class="col-md-3 offset-md-6">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-secondary">合計金額</td>
            <td><%= @total.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>



  <div class="row">
    <div>
      <%= link_to "情報入力に進む", new_order_path(current_customer.id), class: "btn btn-success" %>
    </div>
  </div>


</div>





