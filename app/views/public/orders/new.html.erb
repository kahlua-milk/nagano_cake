<h3>注文情報入力</h3>


<%= form_with model: @order do |f| %>

  <h3>支払方法</h3>
    <%= f.radio_button :payment_option, 0, checked: true %>クレジットカード
    <%= f.radio_button :payment_option, 1 %>銀行振込

<h3>お届け先</h3>
  <%= f.radio_button :%>ご自身の住所
    <p>
      <%= @customer.postal_code %>
      <%= @customer.address %>
    </p>
    <P>
      <%= @customer.last_name %>
      <%= @customer.first_name %>
    </P>


<%= f.radio_button :%>登録済住所から選択
  <%= collection_select(:order_id, @customer, :id, )

<%= f.radio_button :%>新しいお届け先
  <div>
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, placeholder: "0000000" %>
  </div>
  <div>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>
  <div>
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name, placeholder: "令和道子" %>
  </div>





<%= f.submit "確認画面へ進む" %>