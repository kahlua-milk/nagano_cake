<h5><span class="bg-light"> 注文情報確認 </span></h5>


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table class="table table-bordered">
        <thead>
          <tr class="table-secondary">
            <th colspan="2">商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <%= @cart_products.each do |cart_product| %>
          <tr>
            <td><%= image_tag cart_product.product.image, size:"50x50" %></td>
            <td><%= cart_product.product.name %></td>
            <td><%= cart_product.product.with_tax_price.to_s(:delimited) %></td>
            <td><%= cart_product.quantity %></td>
            <td><%= (cart_product.product.with_tax_price * cart_product.quantity).to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <table class="table">
        <tbody>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment %></td>
          </tr>
          <tr>
            <td>お届け先</td>
            <td>
              <%= @order.postal_code %>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>


    <div class="col-md-3 offset-md-1">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>送料</td>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <td>商品合計</td>
            <td><%= @total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td><%= (@order.postage + @total).to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>


    <div class="col-md-2"></div>
  </div>


  <div class="row">
    <%= form_with model: @order, url: thanks_path, local: true do |f| %>
    <div>
      <%= f.hidden_field :payment %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :postage, value: 800 %>
      <%= f.hidden_field :total_amount, value: (@order.postage + @total) %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>