<h3 class="bg-secondary-subtle">　注文履歴一覧　</h3>

<div class="container">
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr class="table-secondary">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <%= @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td>
            <p>〒<%= order.postal_code %></p>
            <p><%= order.address %></p>
            <p><%= order.name %></p>
          </td>
          <td><%= order.product.name %></td>
          <td><%= (cart_product.product.with_tax_price * cart_product.quantity).to_s(:delimited) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
