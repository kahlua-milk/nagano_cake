
<div class="container">
  <div>
    <h5><span class="bg-light"> 注文履歴一覧 </span></h5>
  </div>
  <div class="row">
    <div class="col-md-12 mt-3">
      <table class="table table-bordered table-sm">
        <thead>
          <tr class="table-secondary">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td style="vertical-align:middle;"><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td style="vertical-align:middle;">
                〒<%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
            </td>
            <td style="vertical-align:middle;">
              <% order.order_products.each do |product| %>
                <ul class="order_product_list">
                  <li><%= product.product.name %></li>
                </ul>
              <% end %>
            </td>
            <td style="vertical-align:middle;"><%= order.total_amount.to_s(:delimited) %>円</td>
            <td style="vertical-align:middle;"><%= order.order_status_i18n %></td>
            <td style="vertical-align:middle;", align="center">
              <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>