<div class="row mt-3">
  <div class="col-md-3">
    <!-- ここにジャンルの部分テンプレート -->
      <%= render 'public/products/genre' %>
  </div>
  <div class="col-md-3">
    <%= image_tag @product.image, size: "300x200" %>
  </div>
  <div class="col-md-6">
    <table>
      <tbody>
        <tr>

          <h1><%= @product.name %></h1>
        </tr>
        <tr>

          <h2><%= @product.explanation %></h2>
        </tr>
        <tr>

         <h1><%= "¥#{( @product.price * 1.1).floor}" %>（税込）</h1>
        </tr>
      </tbody>
    </table>
    <p>
<%= form_with model: @cart_product, url: cart_items_path do |f| %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <%= f.label :quantity, "個数" %>
  <%= f.number_field :quantity, min: 1, value: 1 %>
   <%= f.submit 'カートに入れる', class: 'btn btn-primary', formaction: cart_items_path %>
<% end %>
    </p>
  </div>
</div>
