<% if @products.any? %>

<% end %>
<div class="row">
  <div class="col-md-3">
    <!-- ここにジャンルの部分テンプレート -->
    <%= render 'public/products/genre' %>
  </div>
  <div class="col-md-9">
    <table>
      商品一覧全<%= @products.count %>件
      <% @products.each do |product| %>
        <tr>
          <td>
            <%#= link_to items_path(product) do %>
            <%= link_to "/items/#{product.id}" do %>
              <%= image_tag product.image, size: "100x100" %>
            <% end %>
          </td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>

        </tr>
      <% end %>
      <td><%= paginate @products %></td>
    </table>
  </div>
</div>
