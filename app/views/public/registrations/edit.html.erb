<div class="container">
  <div class="row">
    <div class="col-3 bg-light"> 
      <h4>会員情報編集</h4>
    </div>
  </div>


<%= form_with model:@customer, url:customers_path, method: :patch do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-3"><%= f.label :"氏名" %></div>
    <div class="col-3"><%= f.text_field :last_name, :size => "30", autofocus: true %></div>
    <div class="col-1"><%= f.text_field :first_name, :size => "30" %></div>
  </div>
  <div class="row">
    <div class="col-3"><%= f.label :"フリガナ" %></div>
    <div class="col-3"><%= f.text_field :last_furigana, :size => "30" %></div>
    <div class="col-1"><%= f.text_field :first_furigana, :size => "30" %></div>
  </div>
  <div class="row">
    <div class="col-3"><%= f.label :"郵便番号" %></div>
    <div class="col-1"><%= f.text_field :postal_code, :size => "30" %></div>
  </div>
  <div class="row">
    <div class="col-3"><%= f.label :"住所" %></div>
    <div class="col-3"><%= f.text_field :address, :size => "80" %></div>
  </div>
  <div class="row">
    <div class="col-3"><%= f.label :"電話番号" %></div>
    <div class="col-1"><%= f.text_field :telephone_number, :size => "30" %></div>
  </div>
  <div class="row">
    <div class="col-3"><%= f.label :"メールアドレス" %></div>
    <div class="col-1"><%= f.email_field :email, :size => "30" %></div>
  </div>
  
  <div class="row">
    <div class="col-2 offset-3"><%= f.submit "編集内容を保存", class: "btn btn-success" %></div>
    <div class="col-3 offset-2"><%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %></div>
  </div>
<% end %>
</div>
