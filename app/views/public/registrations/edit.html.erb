<h2>会員情報編集</h2>

<%= form_with model:@customer, url:customers_path, method: :patch do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :"氏名" %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :"フリガナ" %>
    <%= f.text_field :last_furigana %>
    <%= f.text_field :first_furigana %>
  </div>
  <div class="field">
    <%= f.label :"郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :"電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>
  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email %>
  </div>
  
  <div><%= f.submit "編集内容を保存" %></div>
  <div><%= link_to "退会する" %></div>
<% end %>

