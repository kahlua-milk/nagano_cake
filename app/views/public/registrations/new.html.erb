<div class="container">
<h4>新規会員登録</h4>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-3"><%= f.label :"名前" %></div>
      <div class="col-1"><%= f.label :"(姓)" %></div>
      <div class="col-3"><%= f.text_field :last_name, :size => "30", autofocus: true, placeholder: "令和" %></div>
      <div class="col-1"><%= f.label :"(名)" %></div>
      <div class="col-1"><%= f.text_field :first_name, :size => "30", placeholder: "道子" %></div>
    </div>

    <div class="row">
      <div class="col-3"><%= f.label :"フリガナ" %></div>
      <div class="col-1"><%= f.label :"(セイ)" %></div>
      <div class="col-3"><%= f.text_field :last_furigana, :size => "30", placeholder: "レイワ" %></div>
      <div class="col-1"><%= f.label :"(メイ)" %></div>
      <div class="col-1"><%= f.text_field :first_furigana, :size => "30", placeholder: "ミチコ" %></div>
    </div>

    <div class="row">
      <div class="col-4"><%= f.label :"メールアドレス" %></div>
      <div class="col-1"><%= f.email_field :email, :size => "30", placeholder: "sample@example.com" %></div>
    </div>

    <div class="row">
      <div class="col-4"><%= f.label :"郵便番号(ハイフンなし)" %></div>
      <div class="col-1"><%= f.text_field :postal_code, :size => "30", placeholder: "0000000" %></div>
    </div>

    <div class="row">
      <div class="col-4"><%= f.label :"住所" %></div>
      <div class="col-1"><%= f.text_field :address, :size => "60", placeholder: "東京都渋谷区代々木神園町0-0" %></div>
    </div>

    <div class="row">
      <div class="col-4"><%= f.label :"電話番号(ハイフンなし)" %></div>
      <div class="col-1"><%= f.text_field :telephone_number, :size => "30", placeholder: "0000000000" %></div>
    </div>

    <div class="row">
      <div class="col-4"><%= f.label :"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-1"><%= f.password_field :password, :size => "30", autocomplete: "new-password" %></div>
    </div>

    <div class="row">
      <div class="col-4"><%= f.label :"パスワード(確認用)" %></div>
      <div class="col-1"><%= f.password_field :password_confirmation, :size => "30", autocomplete: "new-password" %></div>
    </div>

    <div class="row">
      <div class="offset-5 ">
        <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
      </div>
    </div>
<% end %>

<%= render "public/shared/links" %>
</div>
