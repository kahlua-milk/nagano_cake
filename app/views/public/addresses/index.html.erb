<h3 class="bg-secondary-subtle">　配送先登録 / 一覧　</h3>
  <div class="container">

    <div class="row">
      <%= form_with model: @address, url: addresses_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code, placeholder: "0000000" %>
      </div>
      <div class="form-group">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
      <div class="form-group">
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name, placeholder: "令和道子" %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>


    <div class="row">
      <div class="col-md-8">
        <table class="table table-bordered">
          <thead>
            <tr class="table-secondary">
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <%= @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id),
                        method: :patch, class: "btn btn-sm btn-success" %>
                <%= link_to "削除する", address_path(address.id),
                        method: :delete, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-md-4"></div>
    </div>
  </div>

