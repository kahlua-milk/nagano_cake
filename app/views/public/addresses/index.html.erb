<div class="container">
  <div class="row">
    <div class="col-3 bg-light"> 
      <h3>配送先登録 / 一覧</h3>
    </div>
  </div>
  
  
  <%= form_with model: @address, url: addresses_path do |f| %>
  <div class="row">
    <div class="col-3"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div>
    <div class="col-1"><%= f.text_field :postal_code, :size => "30", placeholder: "0000000" %></div>
  </div>
  <div class="row">
    <div class="col-3"><%= f.label :address, "住所" %></div>
    <div class="col-1"><%= f.text_field :address, :size => "60", placeholder: "東京都渋谷区代々木神園町0-0" %></div>
  </div>
  <div class="row">
    <div class="col-3"><%= f.label :name, "宛名" %></div>
    <div class="col-2"><%= f.text_field :name, :size => "30", placeholder: "令和道子" %></div>
    <div class="col-1 offset-3"><%= f.submit "新規登録", class: "btn btn-success" %></div>
  </div>
  <% end %>
    


    <div class="row">
      <div class="col-md-8">
        <table class="table table-bordered">
          <thead>
            <tr class="table-secondary">
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success" %>
                <%= link_to "削除する", address_path(address.id),method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>

