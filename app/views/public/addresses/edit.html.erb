<h2>配送先編集</h2>

<%= form_with model: @address, method: :patch do |f| %>
<div>
  <%= f.label :"郵便番号(ハイフンなし)", autofocus: true %>
  <%= f.text_field :postal_code %>
</div>
<div>
  <%= f.label :"住所" %>
  <%= f.text_field :address %>
</div>
<div>
  <%= f.label :"宛名" %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.submit "変更内容を保存", class: "btn btn-sm btn-success" %>
</div>
<% end %>