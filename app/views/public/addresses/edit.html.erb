<div class="container">
  <div class="row">
    <div class="col-2 bg-light"> 
      <h4>配送先編集</h4>
    </div>
  </div>

<%= form_with model: @address, method: :patch do |f| %>
<div class="row">
  <div class="col-3 mt-4"><%= f.label :"郵便番号(ハイフンなし)", autofocus: true %></div>
  <div class="col-1 mt-4"><%= f.text_field :postal_code, :size => "30" %></div>
</div>
<div class="row">
  <div class="col-3 mt-2"><%= f.label :"住所" %></div>
  <div class="col-1 mt-2"><%= f.text_field :address, :size => "60" %></div>
</div>
<div class="row">
  <div class="col-3 mt-2"><%= f.label :"宛名" %></div>
  <div class="col-1 mt-2"><%= f.text_field :name, :size => "30" %></div>
  <div class="col-1 offset-5 mt-2"><%= f.submit "変更内容を保存", class: "btn btn-sm btn-success" %></div>
</div>
<% end %>
</div>