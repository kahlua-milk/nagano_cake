<% if @items.any? %>
  <%= paginate @items %>
<% end %>
<div class="row">
  <div class="col-md-3">
    <!-- ここにジャンルの部分テンプレート -->
    <%#= render 'public/products/genre' %>
  </div>
  <div class="col-md-9">
    <table>
      商品一覧全<%= @items.count %>件
      <% @items.each do |item| %>
        <tr>
        <td>
          <%= link_to products_path do %>
            <%= image_tag item.image_url %>
          <% end %>
        </td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>