<h3 class="bg-secondary-subtle">　注文履歴一覧　</h3>

<div class="container">
  <div class="row">

      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path do %>
                <%= order.created_at.strftime("%Y/%m/%d/%T") %>
              <% end %>
            </td>
            <td>
              <%= order.customer.last_name %>
              <%= order.customer.first_name %>
            </td>
            <td><%= order.order_product.quantity %></td>
            <td>
              <%= Order.order_statuses.keys.to_a %>
              <%= Order.order_statuses.values.to_a %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @orders %>

    </div>
  </div>

