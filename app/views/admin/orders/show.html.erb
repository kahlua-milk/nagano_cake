<h3 class="bg-secondary-subtle">　注文履歴詳細　</h3>

<div class="container">
  <div class="row">
    <table class="table">
      <tbody>
        <tr>
          <td><strong>購入者</strong></td>
          <td><%= @order.customer.last_name + @order.customer.first_name %></td>
        </tr>
        <tr>
          <td><strong>注文日</strong></td>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <td><strong>配送先</strong></td>
          <td>
            <p>〒<%= @order.postal_code %> <%= @order.address %></p>
            <p><%= @order.name %></p>
          </td>
        </tr>
        <tr>
          <td><strong>支払方法</strong></td>
          <td><% @order.payment %></td>
        </tr>
        <tr>
          <td><strong>注文ステータス</strong></td>
          <td>
            <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
              <%= f.select :order_status, Order.order_statuses.keys.to_a %>
              <%= f.select :order_status, Order.order_statuses.values.to_a %>
              <%= f.submit "更新", class: "btn btn-sm btn-success" %>
            <% end %>


          </td>
        </tr>
      </tbody>
    </table>
  </div>



  <div class="row">
    <div class="col-md-8">
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>商品</th>
            <th>単価 ( 税込 )</th>
            <th>個数</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @order_products.each do |order_product| %>
          <tr>
            <td><%= order_product.product.name %></td>
            <td><%= order_product.price %></td>
            <td><%= order_product.quantity %></td>
            <td><%= order_product.price * order_product.quantity(:delimited) %></td>
            <td>
              <%= form_with model: order_product, url: admin_order_product_path, method: :patch, local: true do |f| %>
                <%= f.select :production_status, OrderProduct.order_statuses.keys.to_a %>
                <%= f.select :production_status, OrderProduct.order_statuses.values.to_a %>
                <%= f.submit "更新", class: "btn btn-sm btn-success" %>



            </td>
          </tr>
        </tbody>
      </table>
    </div>


    <div class="col-md-4">
      <table class="table">
        <tbody>
          <tr>
            <td><strong>商品合計</strong></td>
            <td><%= @total(:delimited) %>円</td>
          </tr>
          <tr>
            <td><strong>送料</strong></td>
            <td><%= @order.postage %>円</td>
          </tr>
          <tr>
            <td><strong>請求金額合計</strong></td>
            <td><strong><%= @order.total_amount(:delimited) %></strong></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

