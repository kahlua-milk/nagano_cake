<div class="container" style="margin-top: 50px;">
  <h3>ジャンル一覧・追加</h3>
  <div class="row justify-content-center">
    <div class="col-md-5">
      

      <%= form_with model: @new_genre, url: admin_genres_path, local: true do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class: 'btn btn-primary' %>
      <% end %>

      <table class="table mt-3">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
